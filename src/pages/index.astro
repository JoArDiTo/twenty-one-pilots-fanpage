---
import Artist from '@components/Artist.astro'
import Video from '@components/Video.astro'
import Logo from '@icons/Logo.astro'
import Layout from '@layouts/Layout.astro'

const artists = [
  {
    name: 'tyler joseph',
    image: 'tyler',
    description: 'Vocalista de la banda, en sus inicios, compuso su música en su sótano, utilizando diversos instrumentos como el piano, ukulele, bajo, guitarra, etc.'
  },
  {
    name: 'josh dun',
    image: 'josh',
    description: 'Baterista de la banda. Es conocido por su energía en el escenario y su habilidad para tocar la batería, además de la trompeta y ha contribuido a la composición de varias canciones de la banda.'
  }
]
---

<Layout title="Twenty One Pilots | FanPage | Inicio">
  <section class="flex flex-col lg:flex-row justify-center lg:justify-center lg:gap-x-12 items-center py-10 lg:py-20 text-contrast font-primary">
    <span class="lg:w-36 text-center text-5xl py-4 lg:py-5">tyler joseph</span>
    <Logo class="w-48 h-48 lg:w-96 lg:h-96" />
    <span class="lg:w-36 text-center text-5xl py-4 lg:py-5">josh dun</span>
  </section>

  <section class="flex flex-col-reverse justify-center items-center py-10 lg:py-20 gap-x-4 gap-y-6 lg:flex-row">
    <img class="artists w-64 lg:w-72" src="/images/artists.webp" alt="">
    <div class="text-justify text-md font-mono px-4 sm:px-8 md:px-16 pb-5 lg:p-0 lg:text-lg lg:w-80 lg:text-right">
      <strong class="text-contrast">Twenty Øne Piløts</strong> es un dúo musical estadounidense originario de <strong class="text-contrast">Columbus, Ohio</strong>. La banda fue formada en 2009 por Tyler Joseph junto con Nick Thomas y Chris Salih, quienes posteriormente abandonaron la banda en 2011. <strong class="text-contrast">Tyler Joseph</strong> es el vocalista principal y toca el piano, bajo, guitarra y ukelele, entre otros instrumentos, mientras que <strong class="text-contrast">Josh Dun</strong> toca la batería y la trompeta. La banda ha lanzado siete álbumes de estudio, siendo el más reciente  <strong class="text-contrast">Clancy</strong>, lanzado en mayo de 2024.
    </div>
  </section>

  <Video />
  
  <section class="flex flex-col justify-center items-center py-10 lg:py-20 gap-x-12">
    <span class="font-primary text-center text-5xl lg:text-7xl text-contrast py-12 lg:py-24 px-1" style="transform: rotate(-3deg);">miembros</span>
    {
      artists.map(({name, image, description}) => (
        <Artist name={name} image={image} description={description} />
      ))
    }
  </section>
</Layout>

<style>
  .artists {
    filter: drop-shadow(
      0 0 1.5rem rgb(255, 68, 0)
    );
  }
</style>