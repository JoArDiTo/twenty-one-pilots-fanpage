---
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
import PreFooter from '@components/PreFooter.astro'
import ClientRouter from 'astro/components/ClientRouter.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
		<meta charset="UTF-8" />
		<meta name="description" content="Fanpage de Twenty One Pilots. Conoce al dÃºo Tyler Joseph y Josh Dun." />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" href="/favicon.webp" />
		<title>{title}</title>
		<ClientRouter />
  </head>
  <body class="grid bg-top-black text-white min-h-dvh w-full m-0 bg-top-found bg-no-repeat bg-cover bg-fixed">
    <Header />
    <main class="relative px-4 py-8">
      <slot class="relative z-10" />
    </main>
    <PreFooter />
    <Footer />
  </body>
</html>

<style>
	body {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		grid-template-rows: auto 1fr auto auto;
		scrollbar-color: #1ddb5d #1c52d0;
		scrollbar-width: 2px;
	}
</style>

<style is:global>
	@font-face {
		font-family: font-atomic;
		src: url("/fonts/font-atomic.ttf");
	}

  .is-active {
    display: block;
    width: 100%;
    animation: grow 0.3s ease-in-out forwards;
    scrollbar-width: none;
  }

  .is-not-active {
    display: none;
    width: 0;
  }
</style>
