---
interface Props {
	name: string
  url: string
  icon: string
}

const { name, url, icon } = Astro.props

const className = 
  icon === 'spotify' ? 'bg-green-500' : 
  icon === 'apple' ? 'bg-black' : 
  'bg-red-500'
---

<a 
  class:list={["w-4/5 lg:w-full max-w-lg flex flex-col lg:flex-row justify-between items-center px-6 py-4 border-2 my-2 rounded-lg transition hover:scale-105", className]} 
  href={url}
  target="_blank">
  <img width="64" src={`/images/platforms/${icon}.webp`} alt={`${name} icon`}>
  <span class="text-xl font-semibold hidden lg:block text-white">{name}</span>
</a>